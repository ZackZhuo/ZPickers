<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/divider"
    android:showDividers="middle"
    android:background="@color/dark_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:divider="@drawable/divider"
        android:showDividers="middle">
        <TextView
            android:id="@+id/key_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/keyboard_text_size"
            android:textColor="@color/white"
            android:text="1"/>

        <TextView
            android:id="@+id/key_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/keyboard_text_size"
            android:textColor="@color/white"
            android:text="2"/>

        <TextView
            android:id="@+id/key_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/keyboard_text_size"
            android:textColor="@color/white"
            android:text="3"/>

        <TextView
            android:id="@+id/key_del"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/keyboard_text_size"
            android:textColor="@color/white"
            android:text="DEL"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:divider="@drawable/divider"
        android:showDividers="middle">
        <TextView
            android:id="@+id/key_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/keyboard_text_size"
            android:textColor="@color/white"
            android:text="4"/>

        <TextView
            android:id="@+id/key_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="@dimen/keyboard_text_size" />

        <TextView
            android:id="@+id/key_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/keyboard_text_size"
            android:textColor="@color/white"
            android:text="6"/>

        <TextView
            android:id="@+id/key_minus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/keyboard_text_size"
            android:textColor="@color/white"
            android:text="-"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:divider="@drawable/divider"
        android:showDividers="middle">
        <TextView
            android:id="@+id/key_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/keyboard_text_size"
            android:textColor="@color/white"
            android:text="7"/>

        <TextView
            android:id="@+id/key_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/keyboard_text_size"
            android:textColor="@color/white"
            android:text="8"/>

        <TextView
            android:id="@+id/key_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/keyboard_text_size"
            android:textColor="@color/white"
            android:text="9"/>

        <TextView
            android:id="@+id/key_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/keyboard_text_size"
            android:textColor="@color/white"
            android:text="+"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:divider="@drawable/divider"
        android:showDividers="middle">
        <TextView
            android:id="@+id/key_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="@dimen/keyboard_text_size"
            android:textColor="@color/white"
            android:text="0"/>

        <TextView
            android:id="@+id/key_point"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/keyboard_text_size"
            android:textColor="@color/white"
            android:text="."/>

        <TextView
            android:id="@+id/key_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/keyboard_text_size"
            android:textColor="@color/white"
            android:text="OK"
            android:background="@color/colorPrimary"/>

    </LinearLayout>

</LinearLayout>